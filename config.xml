<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    id          = "com.phonegap.viitgo"
    versionCode = "10"
    version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>BCCP driver HTTPS</name>

    <description>
      BCCP driver application
    </description>

    <author href="https://build.phonegap.com" email="support@phonegap.com">
    S.S.Hussain
    </author>
    <feature name="http://api.phonegap.com/1.0/geolocation"/>

    <!-- We'll include the Barcode plugin as an example -->
    <plugin name="cordova-plugin-console" spec="1.0.1" source="pgb" />
    <plugin name="org.apache.cordova.geolocation" spec="0.3.12" source="pgb" />
    <plugin name="cordova-plugin-device" spec="1.0.1" source="pgb" />
    <plugin name="cordova-plugin-splashscreen" spec="2.1.0" source="pgb" />
    <!--plugin name="com.indigoway.cordova.whitelist.whitelistplugin" spec="1.1.1" source="pgb" /-->
    <plugin name="com.phonegap.plugin.statusbar" spec="1.1.0" source="pgb" />

   <access origin="*"/>
    <!-- Added the following intents to support the removal of whitelist code from base cordova to a plugin -->
    <!-- Whitelist configuration. Refer to https://cordova.apache.org/docs/en/edge/guide_appdev_whitelist_index.md.html -->
    <plugin name="cordova-plugin-whitelist" version="1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

</widget>
